{
  "name": "@flowi/core",
  "version": "0.0.0",
  "description": "Flowi Core",
  "main": "./bundle/index.js",
  "module": "./dist/module/index.js",
  "types": "./dist/module/index.d.ts",
  "repository": "git@github.com:AlboeDev/flowi-ecs.git",
  "author": "Alboe Development",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "yarn clean && yarn build:dist && yarn build:docs",
    "build:bundle": "rollup -c ./config/rollup.config.js",
    "build:dist": "yarn build:loose && yarn build:bundle",
    "build:docs": "yarn build:docs:data && yarn build:docs:dist",
    "build:docs:data": "api-extractor run -c ./config/api-extractor.config.json",
    "build:docs:dist": "api-documenter markdown -i ./docs/data -o ./docs",
    "build:loose": "tsc",
    "build:watch": "concurrently \"tsc --watch\" \"rollup -c ./config/rollup.config.js -w\"",
    "clean": "yarn clean:dist && yarn clean:docs",
    "clean:dist": "rimraf ./dist",
    "clean:docs": "rimraf ./docs",
    "prepare": "husky install config/husky",
    "test": "yarn test:static && yarn test:unit && yarn test:syntax && yarn test:integration && yarn test:performance",
    "test:integration": "echo \"TODO: this script has not been implemented\"",
    "test:performance": "echo \"TODO: this script has not been implemented\"",
    "test:static": "eslint ./src/**",
    "test:syntax": "tsc --noEmit",
    "test:unit": "jest ./src"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@microsoft/api-documenter": "^7.13.77",
    "@microsoft/api-extractor": "^7.19.2",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "babel-jest": "^27.4.5",
    "concurrently": "^6.5.1",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.62.0",
    "rollup-plugin-dts": "^4.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.5.4"
  }
}
